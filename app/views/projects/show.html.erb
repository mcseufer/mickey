<%- model_class = Projects -%>
<div class="page-header">
  <h1><%=t '.title', :default => Projects %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:projectname) %></dt>
      <dd><pre class="prettyprint"><%= @projects.projectname %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:synopsis) %></dt>
      <dd><pre class="prettyprint"><%= @projects.synopsis %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:technologies) %></dt>
      <dd><pre class="prettyprint"><%= @projects.technologies %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:projectthumb) %></dt>
      <dd><pre class="prettyprint"><%= @projects.projectthumb %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              projects_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_projects_path(@projects), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              projects_path(@projects),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>


<%- model_class = Projects -%>
<div class="page-header">
  <h1><%=t '.title', :default => Projects %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:projectname) %></th>
      <th><%= model_class.human_attribute_name(:synopsis) %></th>
      <th><%= model_class.human_attribute_name(:technologies) %></th>
      <th><%= model_class.human_attribute_name(:projectthumb) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |projects| %>
      <tr>
        <td><%= projects.id %></td>
        <td><%= projects.projectname %></td>
        <td><%= projects.synopsis %></td>
        <td><%= projects.technologies %></td>
        <td><%= projects.projectthumb %></td>
        <td><%=l projects.created_at, format: :long %></td>
        <td>
          <%= link_to projects_path(projects), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to projects_path(projects), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_projects_path,
            :class => 'btn btn-primary' %>
